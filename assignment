num_1 = int ( input ( "First number: " )) num_2 = int ( input ( "Second number: " )) if num_1 % 2 == 0 and num_2 % 2 == 0 : print ( "Both numbers are even." ) elif num_1 % 2 != 0 and num_2 % 2 != 0 : print ( "Both numbers are odd." ) else : print ( "One of the numbers is even." )
